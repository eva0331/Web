/* miniprogram/pages/kindInfo/kindInfo.wxss */
page {
  background: #9fdfc4;
}

.view_main {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.button_kind {
  margin-top: 30rpx;
  color: white;
  width: 200rpx;
  height: 200rpx;
  font-size: 13px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image_kind {
  margin-top: 20rpx;
  width: 90%;
  height: 90%;
}

.view_info {
  margin-top: 30rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: left;
  border-radius: 5px;
}

.view_info_txt {
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  color: #0094ff;
  font-size: 15px;
  font-weight: bold;
}

.view_dispose_info {
  margin-top: 30rpx;
  width: 90%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  box-shadow: 2px 2px 2px grey;
  border: 0.5px solid whitesmoke;
  border-radius: 5px;
  background-color: #ffffff;
}

.view_dispose_info_title {
  margin-left: 20rpx;
  margin-bottom: 5rpx;
  color: #0094ff;
  font-size: 16px;
  font-weight: bold;
}

.view_dispose_info_txt {
  color: grey;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 14px;
}

.view_desc_info{
  width: 92.5%;
  margin:30rpx;
}

.view_desc_info_title{
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
  color: #0094ff;
  font-size: 16px;
  font-weight: bold;
}

.view_desc_info_txt{
  color: grey;
  padding: 10rpx;
  padding-left: 50rpx;
  margin-bottom: 10rpx;
  font-size: 14px;
  background: #ffffff;
}