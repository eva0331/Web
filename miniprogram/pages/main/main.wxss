/* pages/main/main.wxss */
page {
  background: #9fdfc4;
}

.view_main {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
  justify-content: center;
}

.swiper_head {
  width: 100%;
  height: 270rpx;
  background-color: white;
}

.img_Type {
  width: 100%;
  height: 100%;
}

.view_kindList {
  width: 90%;
  height: 100%;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  column-count: 2;
  column-gap: 0;
}

.view_kind {
  width: 100%;
  height: 270rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.button_kind {
  color: white;
  width: 80%;
  height: 80%;
  font-size: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image_kind {
  margin-top: 10rpx;
  width: 90%;
  height: 90%;
}

.view_info {
  width: 80%;
  padding: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  box-shadow: 2px 2px 2px grey;
  border: 0.5px solid whitesmoke;
  border-radius: 5px;
  background-color: #ffffff;
}

.view_info_title {
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  color: #0094ff;
  font-size: 16px;
  font-weight: bold;
}

.view_info_txt {
  margin-left: 20rpx;
  margin-bottom: 5rpx;
  color: grey;
  font-size: 14px;
}
